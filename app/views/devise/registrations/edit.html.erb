<% @title = "Edit #{resource_name.to_s.humanize}" %>
<%= render :layout => "layouts/minimal" do %>
<%= render partial: "layouts/sidenav" %>
<%# current_user.update_attribute :admin, true %>
<div id="main" class='devise'>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
  
    <div class="row mt20">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <%= form_for resource, as: resource_name, url: registration_path(resource_name),
          html: { method: :put, novalidate: true, class: "form-horizontal col-xs-12 col-md-6 col-md-offset-3" } do |f| %>

          <%= f.error_notification %>
          


  

          <%= f.form_group :email do |f| %>
            <%= f.label :email, class: "col-xs-1 col-sm-2 col-md-2 control-label" %>
            <div class="col-sm-10">
              <%= f.email_field :email, required: true, autofocus: true, class: "form-control" %>
              <%= f.error_messages %>
            </div>
          <% end %>
          
          <%= f.form_group :password do |f| %>
          <%= f.label :management, class: "col-xs-1 col-sm-2 col-md-2 control-label" %>
          <div class="col-sm-10">
              <%#= f.collection_select :management_id, Management.order(:name), :id, :name, {}, {multiple:true} %> <%= current_user.managements.name %>
          </div>
          <% end %>

          <%= f.form_group :password do |f| %>
            <%= f.label :password, class: "col-xs-1 col-sm-2 col-md-2 control-label" %>
            <div class="col-sm-10">
              <%= f.email_field :password, class: "form-control" %>
              <%= f.error_messages %>
              <div class="help-inline">
                Leave it blank if you don't want to change it.
              </div>
            </div>
          <% end %>
          
          
          
          

          <%= f.form_group :password_confirmation do |f| %>
            <%= f.label :password_confirmation, class: "col-xs-1 col-sm-2 col-md-2 control-label" %>
            <div class="col-sm-10">
              <%= f.email_field :password_confirmation, class: "form-control" %>
              <%= f.error_messages %>
            </div>
          <% end %>

          <%= f.form_group :current_password do |f| %>
            <%= f.label :current_password, class: "col-xs-1 col-sm-2 col-md-2 control-label" %>
            <div class="col-sm-10">
              <%= f.password_field :current_password, class: "form-control" %>
              <%= f.error_messages %>
              <div class="help-inline">
                We need your current password to confirm your changes.
              </div>
            </div>
            <% unless current_user.try(:manager?) %>
            <%= f.form_group :password do |f| %>
             <%= f.label :admin, class: "col-xs-1 col-sm-2 col-md-2 control-label" %>
            <div class="col-sm-10">
            <%= f.check_box :manager %>
            <%= f.error_messages %>
            </div>
            
            <% end %>
          <% end %>
          
           <% unless current_user.try(:manager?) %>
            <%= f.form_group :password do |f| %>
             <%= f.label :approved, class: "col-xs-1 col-sm-2 col-md-2 control-label" %>
            <div class="col-sm-10">
            <%= f.check_box :approved %>
            <%= f.error_messages %>
            </div>
            
            <% end %>
          <% end %>
          
 <% end %>
          <div class="form-actions col-sm-offset-2">
            <%= f.submit "Update", class: 'btn btn-primary' %>
            <%#= link_to "Cancel my account", registration_path(resource_name), confirm: "Are you sure?", method: :delete, class: "pull-right text-red-400 pt10" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>