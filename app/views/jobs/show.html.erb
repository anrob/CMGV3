<% @title = "Showing job" %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="form-horizontal">
                <div class="form-group">
          <label class="col-md-2 form-label">User</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @job.user_id %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Job</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%= @job.contract_id %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Create</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%#= @job.create %>
            </span>
          </div>
        </div>

                <div class="form-group">
          <label class="col-md-2 form-label">Destroy</label>
          <div class="col-md-10 form-control uneditable-input">
            <span>
              <%#= @job.destroy %>
            </span>
          </div>
        </div>

                <div class="form-actions col-md-offset-2">
          <%= link_to fa_icon_tag("pencil") + ' Edit', edit_job_path(@job), class: 'btn btn-primary' %>
          <%= link_to 'Back', jobs_path, class: 'btn' %>
        </div>
      </div>
    </div>
  </div>
</div>