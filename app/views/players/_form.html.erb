
<%= form_for(@player, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :player do |f| %>
      <%= f.label :player, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :first_name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :management_id do |f| %>
      <%= f.label :management_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :management_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :home_phone do |f| %>
      <%= f.label :home_phone, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :home_phone, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :email do |f| %>
      <%= f.label :email, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :email, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
    
    
     <%= f.form_group :regular_rate do |f| %>
      <%= f.label :regular_rate, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :regular_rate, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions col-md-offset-2 col-md-10">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", players_path, class: 'btn' %>
  </div>
<% end %>

