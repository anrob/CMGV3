<br><% @title = "Listing managements" %>

<% content_for :description do %>
<p>Edit this template in <code>app/views/managements/index.html.erb</code>.</p>
<% end %>

<% content_for :actions do %>
<%= link_to new_management_path, class: 'btn btn-primary btn-large pull-right' do %>
<%= fa_icon_tag "plus" %> Add management
<% end %>
<% end %>

<div class="container">
  <div class="row">
    
    <%= yield :actions %>
    <br><br>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
              <tr>
                                <th>Name</th>
                                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @managements.each do |management| %>
              <tr>
                                <td><%= management.name %></td>
                                <td class="actions">
                  <%= link_to fa_icon_tag("eye"), management, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_management_path(management), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("trash-o"), management, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @managements.length == 0 %>
              <tr><td colspan=42 class='text-center'>No managements.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

                </div>
  </div>
</div>