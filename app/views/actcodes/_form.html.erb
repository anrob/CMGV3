
<%= form_for(@actcode, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :actcode do |f| %>
      <%= f.label :actcode, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :actcode, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :management_id do |f| %>
      <%= f.label :management_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :management_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :description do |f| %>
      <%= f.label :description, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :user_id do |f| %>
      <%= f.label :user_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.number_field :user_id, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions col-md-offset-2 col-md-10">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", actcodes_path, class: 'btn' %>
  </div>
<% end %>

